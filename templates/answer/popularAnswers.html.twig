{% extends 'base.html.twig' %}

{% block title %}Popular Answers
{% endblock %}

{% block body %}
	<div class="container mx-auto my-10">
		<div class=" d-flex justify-between">
			<h1>Most Popular Answers</h1>

			<form action="{{ path('app_popular_answers') }}">
				<input type="search" name="q" value="{{ app.request.query.get('q') }}" class="form-control" placeholder="Search..." aria-label="Search">
			</form>
		</div>

		<ul>
			{% for answer in answers %}
				{{ include('answer/question_answers.html.twig', {
					showQuestion: true,
				}) }}
			{% endfor %}
		</ul>
	</div>
{% endblock %}
