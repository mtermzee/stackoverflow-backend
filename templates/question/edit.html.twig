{% extends "base.html.twig" %}

{% block title %}
	Edit Qustion:
	{{ question.title }}
{% endblock %}

{% block body %}
	<div class="container mx-auto my-10">

		<div class="flex justify-center">
			<div class="flex flex-col md:flex-row w-xl rounded-lg bg-white shadow-lg">
				<img class=" w-full h-96 md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg" src="{{ question.owner.getAvatarURL }}" alt=""/>
				<div class="p-6 flex flex-col justify-start">
					<h5 class="text-gray-900 text-xl font-medium mb-2">Edit Qustion</h5>
					<p class="text-gray-700 text-base mb-4">
						<blockquote>{{ question.question }}</blockquote>
					</p>
					<br>
					<p class="text-gray-600 text-xs">Last updated
						{{ question.updatedAt|ago }}</p>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
